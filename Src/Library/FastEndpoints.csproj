<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    
    <Version>1.3.0</Version>
    
    <PackageReleaseNotes>
      - support for in-process pub/sub event notifications
      - auto registration of event handlers
      - dependancy resolving for event handlers
    </PackageReleaseNotes>
    
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;CS1591;CS1573</NoWarn>
    <Authors>Đĵ ΝιΓΞΗΛψΚ</Authors>
    <Description>An alternative for building RESTful Web APIs with ASP.Net 6 which encourages CQRS and Vertical Slice Architecture.</Description>
    <PackageProjectUrl>https://github.com/dj-nitehawk/FastEndpoints</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dj-nitehawk/FastEndpoints.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Security\FastEndpoints.Security.csproj" />
    <ProjectReference Include="..\Validation\FastEndpoints.Validation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Link="Content\Readme">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
 
</Project>
